{{!-- start login (e-mail or phone number and password) --}}
{{>pageHead}}

{{!-- start login header --}}
<header class="login-header">
  <div class="container-md text-center py-4">
    <a href="/en" class="homeLink">
      <img src="/images/logo.png" alt="albayie-logo">
    </a>
  </div>
</header>
{{!-- end login header --}}

<div class="adj-login-form mb-5">

  {{!-- start login form --}}
  <div class="container-md">
    <section class="login-content p-3 border border-1">
      <h4 class="form-type mb-1">Login</h4>
      <p class="form-details m-0">Enter your details down below</p>
      <form method="post" class="login-form mt-3">
        <div class="mb-3">
          <label for="login-authPortal" class="form-label">Email Address or Phone Number</label>
          <input type="text" class="form-control" id="login-authPortal" placeholder="" name="authPortal"
            value="{{data.authPortal}}">

          {{!-- show error invalid email or password --}}
          {{#if (compare error 'invalid email or phone number')}}
          <div class="authPortal-message text-danger mt-2">Invalid email or phone number</div>
          {{/if}}

        </div>
        <div class="mb-3">
          <label for="login-password" class="form-label">Password</label>
          <input type="password" class="form-control" id="login-password" placeholder="" name="password" value="">

          {{!-- show error invalid password --}}
          {{#if (compare error 'invalid password')}}
          <div class="password-message text-danger mt-2">Invalid password</div>
          {{/if}}

        </div>
        <button type="submit" class="btn w-100">Login</button>
      </form>
    </section>
  </div>
  {{!-- end login form --}}

  {{!-- start go to register form button --}}
  <div class="container-md">
    <section class="redirect-button">
      <div class="borderer position-relative py-4">
        <hr class="">
        <p class="position-absolute">Don't have an account!</p>
      </div>
      <a class="btn w-100 mb-4" href="/en/register">Create Account</a>
    </section>
  </div>
  {{!-- end go to register form button --}}

</div>

{{!-- start login footer --}}
<footer class="login-footer text-center py-4">
  <div class="container-xxl">
    <p class="copyright m-0">&copy;Copyright by: Albayie&trade;</p>
  </div>
</footer>
{{!-- end login footer --}}

{{!-- end login (e-mail or phone number and password) --}}
{{>pageFoot}}