{{!-- start the profile delete --}}

<section class="profile-info py-4">
  <header class="profile-header px-2">
    <h1 class="m-0 p-0 text-capitalize fs-2">حذف الحساب</h1>
    <hr class="border-1 m-0">
  </header>
  <div class="profile px-2">

    {{!-- delete user account form --}}
    <div id="profile-delete" class="delete-profile pt-4">
      <form class="user-data-form"
        action="{{#unless smallScreen}}/ar/users/profile/{{data.user._id}}/general/delete{{else}}/ar/users/profile/{{data.user._id}}/general/delete?screen=small-medium{{/unless}}"
        method="post">
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input shadow-none border-danger" id="exampleCheckDelete"
            name="delete" value="true">
          <label class="form-check-label" for="exampleCheckDelete">
            احذف هذا الحساب
          </label>
        </div>
        <button type="submit" class="btn bg-danger text-nowrap px-4 border-0">
          حذف الحساب
        </button>
      </form>
    </div>
  </div>
</section>

{{!-- end the profile delete --}}