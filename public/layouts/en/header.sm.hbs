{{!-- start header-sm --}}
<header class="navbar py-0 header-sm">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img class="logo-img" src="/images/logo_white.png" alt="albayie-logo">
    </a>
    <div class="navbar-options d-flex align-items-center">
      <div class="badges d-flex align-items-center">
        <div class="wish-list">
          <button type="button" class="btn position-relative">
            <i class="fa-solid fa-pen-to-square"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill border border-2">0</span>
          </button>
        </div>
        <div class="cart">
          <button type="button" class="btn position-relative">
            <i class="fa-solid fa-cart-shopping"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill border border-2">0</span>
          </button>
        </div>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse toggle-sidebar" id="navbarNav">
      <div class="sidebar-header">
        <div id="dropdown-lang" class="dropdown">
          <button class="btn border-0 dropdown-toggle bg-white d-flex align-items-center" type="button"
            data-bs-toggle="static" aria-expanded="false">
            <img src="/images/united.svg" alt="english" style="width: 20px;">
            <span class="language text-capitalize mx-2">english</span>
            <span class="arrow-down"><i class="fa-solid fa-chevron-down"></i></span>
          </button>
          <ul id="dropdown-menu" class="dropdown-menu">
            <li><a id="ar" class="dropdown-item d-flex align-items-center" href="{{arLink}}">
                <img src="/images/egypt.svg" alt="arabic" style="width: 20px;">
                <span class="text-capitalize ms-2">arabic</span>
              </a></li>
            <li><a id="en" class="dropdown-item d-flex align-items-center" href="{{enLink}}">
                <img src="/images/united.svg" alt="english" style="width: 20px;">
                <span class="text-capitalize ms-2">english</span>
              </a></li>
          </ul>
        </div>
        <h1 class="site-heading">albayie</h1>
      </div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link p-2 {{#if (compare path 'en')}} active {{/if}}" href="/en">
            <i class="fa-solid fa-house"></i>
            home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link p-2 {{#if  (or path 'en/users/profile/general')}} active {{/if}}" data-bs-toggle="dropdown"
            role="button">
            <i class="fa-solid fa-user"></i>
            my account
          </a>
          <ul class="dropdown-menu border-0 m-0 rounded-0">
            <li class="">
              <a class="dropdown-item px-4 py-2"
                href="/en/users/profile/{{data.user._id}}/general?screen=small-medium">General</a>
            </li>
            <li class="">
              <a class="dropdown-item px-4 py-2"
                href="/en/users/profile/{{data.user._id}}/wishlist?screen=small-medium">Wishlist</a>
            </li>
            <li class="">
              <a class="dropdown-item px-4 py-2" href="/en/users/profile/{{data.user._id}}/cart">My cart</a>
            </li>
            <li class="">
              <a class="dropdown-item px-4 py-2"
                href="/en/users/profile/{{data.user._id}}/orders?screen=small-medium">Orders</a>
            </li>
            <li class="">
              <a class="dropdown-item px-4 py-2"
                href="/en/users/profile/{{data.user._id}}/history?screen=small-medium">History</a>
            </li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link p-2 {{#if (compare path 'en/users/profile/cart')}} active {{/if}}" href="">
            <i class="fa-solid fa-cart-shopping"></i>
            my cart
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link p-2 {{#if (compare path 'en/checkout')}} active {{/if}}" href="">
            <i class="fa-regular fa-square-check"></i>
            checkout
          </a>
        </li>
      </ul>
      <p id="" class="registration">

        {{!-- toggle between login / create account and logout --}}
        {{#if data.isLogin}}
        <a href="/en/logout" class="logout">log out</a>
        {{else}}
        <a href="/en/login" class="login">log in</a>
        <span>or</span>
        <a href="/en/register" class="register">create account</a>
        {{/if}}

      </p>
    </div>
  </div>
</header>
{{!-- end header-sm --}}

