{{!-- start header (control-bar) --}}
<header class="control-nav pb-1">
  <div class="container-xxl">
    <div class="nav-style-between">
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link {{#if (compare path 'en')}} active {{/if}}" href="/en">
            <i class="fa-solid fa-house"></i>
            home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link  {{#if  (compare path 'en/account')}} active {{/if}}" href="/en/account">
